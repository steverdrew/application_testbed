<div class="row">
	<div class="large-12 columns">
		<h1>My bookings</h1>
		<hr>
	</div>
<div class="row">
	<div class="large-2 columns">
		<ul class="side-nav">
	  		<li class="active"><a href="#">Current</a></li>
	  		<li class="divider"></li>
	  		<li><a href="#">Recent</a></li>
	  		<li><a href="#">All</a></li>
		</ul>
	</div>
	<div class="large-10 columns">
		<div class="row">
			<div class="large-4 columns">
				<h4>Upcoming</h4>
			</div>
			<div class="large-8 columns">
				<%= image_tag "cottage.jpg", size: "75x75", :alt => "cottage" %>
				
			</div>
			
		</div>
		<div class="row">
			<div class="large-12 columns">
				<h4>Last Month</h4>
			</div>
		</div>
		<div class="row">
			<div class="large-12 columns">
				<h4>Six months ago</h4>
			</div>
		</div>
		<div class="row">
			<div class="large-12 columns">
				<h4>Last year</h4>
			</div>
		</div>			
	</div>
</div>
	
</div>
<div class="row">
	<div class="large-12 columns">
		<table>
		  <tbody>
		    <% @bookings.each do |booking| %>
		      <tr>
		        <td><%= link_to 'Show', booking %></td>
		        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
		        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>		
	</div>
</div>
<div class="row">
	<div class="large-12 columns">
		<%= link_to 'New Booking', new_booking_path %>
	</div>
</div>

